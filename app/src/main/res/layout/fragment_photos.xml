<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        >

        <TextView
            android:id="@+id/text_photos_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="xx年xx月xx日" />

        <ImageView
            android:id="@+id/imageView_photos_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/text_photos_1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/student" />

        <ImageView
            android:id="@+id/imageView_photos_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/text_photos_1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imageView_photos_1"
            android:src="@drawable/student1" />

        <ImageView
            android:id="@+id/imageView_photos_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/text_photos_1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imageView_photos_2"
            android:src="@drawable/student2" />

        <ImageView
            android:id="@+id/imageView_photos_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/text_photos_1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imageView_photos_3"
            android:src="@drawable/student3" />

        <ImageView
            android:id="@+id/imageView_photos_5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/imageView_photos_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/student4" />
    </RelativeLayout>

